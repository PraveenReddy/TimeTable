<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#b3ffff">


    <Button
        android:id="@+id/button_8th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8th Class Lecture Videos"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:background="@drawable/btnshape" />

    <Button
        android:id="@+id/button_9th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9th Class Lecture Videos"
        android:textAllCaps="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:background="@drawable/btnshape" />

    <Button
        android:id="@+id/button_10th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10th Class Lecture Videos"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btnshape" />


    <Button
        android:id="@+id/button_inter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inter-1 Lecture Videos"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btnshape" />

    <Button
        android:id="@+id/button_inter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inter-2 Lecture Videos"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btnshape" />

    <Button
        android:id="@+id/button_backAdmin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btnshape" />


</LinearLayout>


