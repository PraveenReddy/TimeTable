<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dr.timetable.AddSubject"
    android:background="#b3ffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center"
            android:text="Semister"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_semister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center"
            android:text="Branch"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_branch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center"
            android:text="Sections"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_sections"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"></Spinner>

    </LinearLayout>


    <Button
        android:id="@+id/bt_generate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Generate"
        android:textAllCaps="true"
        android:background="@drawable/btnshape" />


</LinearLayout>
