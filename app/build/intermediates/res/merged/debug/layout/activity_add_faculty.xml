<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dr.timetable.AddSubject"
    android:background="#b3ffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center"
            android:text="Semister"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_semister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center"
            android:text="Branch"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_branch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center"
            android:text="Sections"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_sections"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/edittext_faculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Faculty Name."
            android:gravity="center"
            android:background="@drawable/etshape" />

        <EditText
            android:id="@+id/et_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:hint="Enter Qualification."
            android:background="@drawable/etshape" />

        <EditText
            android:id="@+id/et_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Experience."
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:inputType="number"
            android:background="@drawable/etshape" />


        <Button

            android:id="@+id/button_addfaculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnshape"
            android:text="Add"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
